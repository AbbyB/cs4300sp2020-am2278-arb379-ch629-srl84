description "upstart"

start on (filesystem)
stop on runlevel [016]

respawn
setuid root
setgid nogroup
chdir {{ repository_path }}

exec export DATABASE_URL=postgresql://localhost/mydb
exec export APP_SETTINGS=config.ProductionConfig
exec gunicorn app:app --bind=unix:/tmp/cs.sock --workers 3 --user=root --log-level=debug
